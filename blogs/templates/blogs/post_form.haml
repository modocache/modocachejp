- extends 'blogs/base.html'
  - block main-content
    %form{action:'{% url posts_create %}',
          method:'post',
          charset:'utf-8'}
      %fieldset
        %legend
          - if post
            Update "{{ post.title }}"
          - else
            Create New Post
        - csrf_token
        - for field in form
          - include 'modocachejp/includes/forms/form_field.html'
        .form-actions
          %button.btn.btn-primary{type:'submit'}
            - if post
              Update
            - else
              Create
