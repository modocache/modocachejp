.post-container
  %h1
    - block post-title
      %a{href:'{{ post.get_absolute_url }}'}= post.title
    - if post
      %small
        %span.date= post.created_at_localtime
        - if post.tags.all
          &nbsp;
        - for tag in post.tags.all
          %a{href:'{{ tag.get_absolute_url }}'}<
            %span.label.label-inverse= tag.name
        - if perms.blogs.change_post
          &nbsp;
          %a.btn.btn-mini{href:'{{ post.get_absolute_edit_url }}'}
            Edit
  .content
    - block post-content
      = post.body_html|safe
